<%= form_with(model: run) do |form| %>
  <% if run.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(run.errors.count, "error") %> prohibited this run from being saved:</h2>

      <ul>
        <% run.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name, placeholder: "John's nth Run" %>
  </div>

  <div>
    <%= form.label :hours, style: "display: block" %>
    <%= form.number_field :hours, in: 1.00..1000.00, placeholder: "1.2" %>
  </div>

  <div>
    <%= form.label :miles, style: "display: block" %>
    <%= form.number_field :miles, in: 1.00..1000.00, placeholder: "8.3" %>
  </div>

  <div>
    <%= form.label :dateRan, style: "display: block" %>
    <%= form.date_field :dateRan, placeholder: DateTime %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
